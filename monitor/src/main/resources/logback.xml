<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
    <jmxConfigurator/>
    <property name="PATH_LOG" value="/opt/logs/tomcat/app/${tomcat_app_base:-/tmp}"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%p %d{yyyy-MM-dd HH:mm:ss.SSS} %t %logger.%M [%F:%L] - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <File>${PATH_LOG}/monitor.log</File>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %4p %logger{29}.%M - %msg%n%ex{10}</pattern>
        </encoder>>
    </appender>

    <root level="INFO">
        <!--<appender-ref ref="FILE" />-->
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="top_log">
        <level value="trace"/>
        <appender-ref ref="TOP_LOG"/>
    </logger>
</configuration>